# .env.docker - Example environment file for Docker development
# Copy this file to .env and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL - for local development)
# =============================================================================
SUPABASE_URL=postgresql://postgres:postgres@postgres:5432/evlink
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# ENODE API CONFIGURATION (Required for EV integration)
# =============================================================================
ENODE_CLIENT_ID=your_enode_client_id
ENODE_CLIENT_SECRET=your_enode_client_secret
ENODE_BASE_URL=https://enode-api.sandbox.enode.io
ENODE_AUTH_URL=https://oauth.sandbox.enode.io/oauth2/token
ENODE_WEBHOOK_SECRET=your_webhook_secret
REDIRECT_URI=http://localhost:8000/api/link/callback

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENV=development
MOCK_LINK_RESULT=true
CACHE_EXPIRATION_MINUTES=5
WEBHOOK_URL=http://localhost:8000/webhook
INTERNAL_API_KEY=dev_internal_key

# =============================================================================
# EMAIL CONFIGURATION (Optional for local development)
# =============================================================================
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@evlinkha.se
FROM_NAME=EVLinkHA Local

# Brevo (formerly SendinBlue)
BREVO_API_KEY=your_brevo_api_key
BREVO_CUSTOMERS_LIST_ID=4

# =============================================================================
# STRIPE CONFIGURATION (Optional for local development)
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SUCCESS_URL=http://localhost:3000/success
STRIPE_CANCEL_URL=http://localhost:3000/cancel

# =============================================================================
# TWILIO SMS CONFIGURATION (Optional for local development)
# =============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM_NUMBER=+1234567890

# =============================================================================
# MONITORING CONFIGURATION (Optional for local development)
# =============================================================================
SENTRY_DSN=your_sentry_dsn

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=http://localhost:5432
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key